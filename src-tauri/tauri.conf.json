{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "zint",
    "version": "0.1.0",
    "identifier": "io.github.zint",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "title": "Zint",
                "width": 1200,
                "height": 800,
                "minWidth": 800,
                "minHeight": 600,
                "resizable": true,
                "fullscreen": false,
                "decorations": true,
                "transparent": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": [
            "appimage",
            "deb"
        ],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.png"
        ],
        "category": "Utility",
        "shortDescription": "Keyboard-driven file manager",
        "longDescription": "A high-performance, keyboard-driven GUI file manager for Linux with Miller columns layout and Vim-style navigation."
    }
}